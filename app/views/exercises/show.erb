<h3><%= @exercise.name.upcase %> - <%= @exercise.target.titleize %></h3>
<p><%= @exercise.instruction %></p>


<input type="button" value="All Exercises" onclick="window.location.href = '/exercises'"/>
<input type="button" value="Your Circuits" onclick="window.location.href = '/circuits'"/>
<br>
<!-- Note Form Here -->
<br>
<form action="/exercises/<%= @exercise.slug %>" method="post">
  <input type="text" name="note[content]" placeholder="Your Note">
  <input type="submit" value="Save Note" id="submit">
</form>

<% @notes.each.with_index(1) do |note, index| %>
    <p><%=index %>.
    <%= note.content %> - posted by: <%= note.user.username.titleize %></p>
    <%end%>
